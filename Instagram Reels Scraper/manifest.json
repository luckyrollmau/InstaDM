{
    "manifest_version": 3,
    "name": "Instagram Reels Scraper",
    "version": "1.0",
    "description": "Automatically scrolls and scrapes data from Instagram Reels",
    "host_permissions": [
    "https://www.instagram.com/*"
],
"permissions": [
    "scripting",
    "activeTab",
    "storage",
    "tabs"
],
    "action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["https://www.instagram.com/*"],
        "js": ["content.js"]
      }
    ],
    "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
}
  }

  
  